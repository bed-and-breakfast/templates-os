{
    "name": "@bed-and-breakfast/templates-open-source",
    "version": "4.2.18",
    "description": "Bed & Breakfast Open Source Template",
    "private": false,
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bed-and-breakfast/templates-open-source.git"
    },
    "bugs": "https://github.com/bed-and-breakfast/templates-open-source/issues",
    "homepage": "https://github.com/bed-and-breakfast/templates-open-source",
    "author": "Bed & Breakfast",
    "keywords": [
        "bed",
        "breakfast",
        "package",
        "template",
        "open source"
    ],
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "files": [
        "package.json",
        "README.md",
        "CHANGELOG.md",
        "lib"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf lib && tsc && tsc -p tsconfig.cjs.json",
        "check:md": "check-all-markdown --no-check-links && markdown-doctest",
        "commit": "cz",
        "format": "prettier \"**/*.+(js|ts|json|yml|yaml)\" --check",
        "format:fix": "prettier \"**/*.+(js|ts|json|yml|yaml)\" --write",
        "format:package": "sort-package-json",
        "lint": "eslint . --ext .ts,.js,.yml,.yaml",
        "lint:fix": "eslint . --ext .ts,.js,.yml,.yaml --fix",
        "prepare": "husky install",
        "semantic-release": "semantic-release",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "lint-staged": {
        "*.!(js|ts|json|yml|yaml|md)": "prettier --write --ignore-unknown",
        "*.@(js|ts|json|yml|yaml|md)": "prettier --write",
        "*.{ts,js,yml,yaml}": "eslint --cache --fix"
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "coverageReporters": [
            "text",
            "cobertura"
        ],
        "coverageThreshold": {
            "global": {
                "lines": 100
            }
        },
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "suiteName": "Test Report",
                    "outputDirectory": "./test"
                }
            ]
        ],
        "rootDir": "src",
        "testEnvironment": "node",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "release": {
        "analyzeCommits": "semantic-release-conventional-commits",
        "branches": "main",
        "minorTypes": [
            "feat"
        ],
        "patchTypes": [
            "build",
            "chore",
            "ci",
            "docs",
            "fix",
            "perf",
            "refactor",
            "revert",
            "style",
            "test"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            [
                "@semantic-release/release-notes-generator",
                {
                    "preset": "conventionalcommits",
                    "presetConfig": {
                        "types": [
                            {
                                "type": "build",
                                "section": "Build",
                                "hidden": true
                            },
                            {
                                "type": "chore",
                                "section": "Chores",
                                "hidden": false
                            },
                            {
                                "type": "ci",
                                "section": "CI/CD",
                                "hidden": true
                            },
                            {
                                "type": "docs",
                                "section": "Docs",
                                "hidden": false
                            },
                            {
                                "type": "feat",
                                "section": "Features",
                                "hidden": false
                            },
                            {
                                "type": "fix",
                                "section": "Bug Fixes",
                                "hidden": false
                            },
                            {
                                "type": "perf",
                                "section": "Performance",
                                "hidden": false
                            },
                            {
                                "type": "refactor",
                                "section": "Refactor",
                                "hidden": true
                            },
                            {
                                "type": "revert",
                                "section": "Revert",
                                "hidden": false
                            },
                            {
                                "type": "style",
                                "section": "Styles",
                                "hidden": true
                            },
                            {
                                "type": "test",
                                "section": "Tests",
                                "hidden": true
                            }
                        ]
                    }
                }
            ],
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/github",
            "@semantic-release/git"
        ],
        "preset": "conventionalcommits"
    },
    "types": "lib/index.d.ts",
    "devDependencies": {
        "@bed-and-breakfast/template-tools": "2.2.8",
        "@commitlint/cli": "17.6.5",
        "@commitlint/config-conventional": "17.6.5",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@types/jest": "29.5.2",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "5.60.0",
        "@typescript-eslint/parser": "5.60.0",
        "check-all-markdown": "1.4.0",
        "cz-conventional-changelog": "github:commitizen/cz-conventional-changelog",
        "eslint": "8.43.0",
        "eslint-config-airbnb-typescript": "17.0.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-yaml": "0.5.0",
        "eslint-plugin-yml": "1.8.0",
        "husky": "8.0.3",
        "jest": "29.5.0",
        "jest-junit": "16.0.0",
        "lint-staged": "13.2.2",
        "markdown-doctest": "1.1.0",
        "prettier": "2.8.8",
        "rimraf": "5.0.1",
        "semantic-release": "21.0.5",
        "semantic-release-conventional-commits": "3.0.0",
        "sort-package-json": "2.14.0",
        "ts-jest": "29.1.0",
        "typescript": "5.0.4"
    }
}
